{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext", "dom",
    ],
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "public/dist",
    "paths": {
      "components/*": ["./src/components"],
    },
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./node_modules/**/*",
  ]
}
